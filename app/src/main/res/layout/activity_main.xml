<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/iv_Sophos"
        android:layout_width="278dp"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/image_sophos" />

    <TextView
        android:id="@+id/tv_Meh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="65dp"
        android:fontFamily="@font/montserrat_black"
        android:gravity="center"
        android:text="Ingresa tus datos para acceder"
        android:textColor="@color/sophos"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/lnyEmail"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_weight="4"
            android:background="@drawable/left_button"
            android:padding="15dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <EditText
            android:id="@+id/et_Account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-2dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/right_button"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingLeft="18dp"
            android:textColor="@color/sophos"
            android:textColorHint="@color/sophos"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnyPassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivKey"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="-2dp"
            android:layout_weight="4"

            android:background="@drawable/left_button"
            android:padding="12dp"
            app:srcCompat="@drawable/key_icon" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:textColorHint="@color/sophos"
            app:endIconMode="password_toggle"
            app:endIconTint="@color/sophos">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_Key"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/right_button"
                android:hint="Password"
                android:inputType="textPassword"

                android:textSize="20dp">


            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_Ingresar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:fontFamily="@font/montserrat_black"
        android:text="Ingresar"
        android:textAllCaps="false"
        android:textSize="19dp"
        app:cornerRadius="10dp" />

    <Button
        android:id="@+id/btn_Huella"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/huella"
        android:fontFamily="@font/montserrat_black"
        android:text="Ingresar con huella"
        android:textColor="@color/sophos"
        android:textAllCaps="false"

        android:textSize="18sp"
        app:cornerRadius="10dp"
        app:strokeColor="@color/sophos"
        app:strokeWidth="2dp" />


</LinearLayout>