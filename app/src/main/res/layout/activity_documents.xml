<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".view.SendDocumentsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        >

        <TextView
            android:id="@+id/tv_toGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|left"
            android:textColor="@color/sophos"
            android:textSize="20dp"
            android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
            android:text="  Regresar"
/>

        <Spinner
            android:id="@+id/spinner_opciones"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu"
            android:dropDownSelector="@color/sophos"

            android:textAlignment="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="left"
        android:paddingLeft="20dp"
        >

        <TextView
            android:id="@+id/tvDocuments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Envio de documentaciÃ³n"
            android:textColor="@color/black"
            android:textSize="19dp" />

        <ImageView
            android:id="@+id/ivCamera"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"

            android:background="@drawable/icon_camera" />

        <Spinner
            android:id="@+id/spinnerTypeDocuments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"


            />

        <EditText
            android:id="@+id/etNumberDocument"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/badge"
            android:drawablePadding="20dp"
            android:inputType="number"
            android:hint="Numero de documento"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:lineHeight="200dp"

            />

        <EditText
            android:id="@+id/etNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:includeFontPadding="false"
            android:inputType="textPersonName"
            android:hint="Nombres"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:lineHeight="200dp"
            />

        <EditText
            android:id="@+id/etLastnames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Apellidos"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:lineHeight="200dp"
            />

        <EditText
            android:id="@+id/etCorreo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Correo"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"
            android:lineHeight="200dp"
            />



        <Spinner
            android:id="@+id/spinnerCiudad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="29dp"


            />

        <EditText
            android:id="@+id/etTypeAttached"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Tipo de adjunto"
            android:textColorHint="@color/black"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="16dp"

            />

        <Button
            android:id="@+id/btnDocument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documento"
            android:drawableLeft="@drawable/backup"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"

            android:textAllCaps="false"

            android:textSize="18sp"
            app:cornerRadius="10dp"
            android:backgroundTint="#FE41A7"
            app:strokeColor="#FE1191"
            app:strokeWidth="2dp"

            />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="26dp"
            android:backgroundTint="#FE41A7"
            android:fontFamily="@font/montserrat_bold"


            android:text="Enviar"

            android:textAllCaps="false"
            android:textSize="22sp"
            app:cornerRadius="10dp"
            app:strokeColor="#FE1191"

            app:strokeWidth="2dp" />



    </LinearLayout>

</LinearLayout>