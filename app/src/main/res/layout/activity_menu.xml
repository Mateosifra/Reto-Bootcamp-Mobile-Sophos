<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".view.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_toGoBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center|left"
            android:textColor="@color/sophos"
            android:textSize="29dp" />

        <Spinner
            android:id="@+id/spinner_opciones"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:background="@drawable/menu"
            android:dropDownSelector="@color/sophos"
            android:gravity="center"
            android:scrollbarTrackHorizontal="@drawable/badge"
            android:spinnerMode="dropdown"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="1.5"
        android:background="@drawable/imagen_corporativa"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Bienvenido"
            android:textColor="@color/white"
            android:textSize="20dp"


            />

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Estas son las opciones\n  que tenemos  para ti"
            android:textColor="@color/white"
            android:textSize="16dp"


            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/frames"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/tv_sendDocuments"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon1"
                android:fontFamily="@font/montserrat_bold"
                android:padding="10dp"
                android:text="      Enviar documentos"
                android:textColor="@color/frame1"
                android:textSize="19sp" />

            <Button
                android:id="@+id/btn_sentDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_bold"

                android:drawableEnd="@drawable/ic_baseline_arrow1"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textColor="@color/frame1"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/frame1"
                app:strokeWidth="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/frames2"
            android:orientation="vertical"


            >

            <TextView
                android:id="@+id/tv_viewDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon2"
                android:fontFamily="@font/montserrat_bold"
                android:padding="10dp"
                android:text="       Ver documentos"
                android:textColor="@color/frame2"
                android:textSize="19dp" />

            <Button
                android:id="@+id/btn_viewDocuments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_bold"

                android:drawableEnd="@drawable/ic_baseline_arrow2"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textColor="@color/frame2"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/frame2"
                app:strokeWidth="2dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_weight="1"
            android:background="@drawable/frames3"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_offices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/icon3"
                android:fontFamily="@font/montserrat_bold"
                android:padding="10dp"
                android:text="      Oficinas"
                android:textColor="@color/frame3"
                android:textSize="19dp" />

            <Button
                android:id="@+id/btn_oficces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="190dp"
                android:layout_marginRight="20dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_bold"

                android:drawableEnd="@drawable/ic_baseline_arrow3"
                android:text="Ingresar"
                android:textAllCaps="false"
                android:textColor="@color/frame3"
                android:textSize="14sp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/frame3"
                app:strokeWidth="2dp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>